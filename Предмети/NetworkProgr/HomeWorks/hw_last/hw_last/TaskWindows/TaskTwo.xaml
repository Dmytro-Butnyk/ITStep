<Window x:Class="hw_last.TaskWindows.TaskTwo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hw_last.TaskWindows"
        mc:Ignorable="d"
        Title="TaskTwo" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <TextBox x:Name="SearchTextBox"
                     Grid.Row="1"
                     Margin="10"
                     TextWrapping="Wrap"/>

            <Button Click="SearchButton_Click"
                    Content="Search"
                    FontSize="20"
                    Grid.Row="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Padding="5"
                    Margin="10,0"/>

            <Button Click="ByeButton_Click"
                    Content="Bye"
                    FontSize="20"
                    Grid.Row="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Padding="5"
                    Margin="10,0"/>
        </Grid>
        <ScrollViewer Grid.Column="1">
            <TextBlock x:Name="ResultsTextBlock"
                       Grid.Column="1"
                       TextWrapping="Wrap"/>
        </ScrollViewer>
    </Grid>
</Window>
