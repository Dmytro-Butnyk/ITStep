<Window x:Class="BookShopApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookShopApplication"
        mc:Ignorable="d"
        Title="MainWindow" MaxHeight="450" MaxWidth="400" MinHeight="450" MinWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Welcome&#xD;&#xA;our &#xD;&#xA;book shop!"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   FontFamily="Arial"
                   FontWeight="Bold"
                   FontSize="30"
                   Grid.Column="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <Label Content="Login:"
               Grid.Row="1"
               FontSize="16"
               FontWeight="Bold"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"/>
        <Label Content="Password:"
               Grid.Row="2"
               FontSize="14"
               FontWeight="Bold"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"/>

        <!--Auth-->
        <TextBox x:Name="Login_Enter"
                 Grid.Row="1"
                 Grid.Column="1"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Center"
                 Margin="10,0"/>
        <TextBox x:Name="Password_Enter"
                 Grid.Row="2"
                 Grid.Column="1"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Center"
                 Margin="10,0"/>
        
        <!--Buttons-->
        <Button Click="Autorization_Click"
                Content="Log in"
                Grid.Column="1"
                Grid.Row="3"
                FontSize="24"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Padding="10, 5"
                Margin="10,0"/>
        <Button Click="Registration_Click"
                Content="Sign in"
                Grid.Column="1"
                Grid.Row="3"
                FontSize="24"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Padding="10, 5"
                Margin="10,0"/>
    </Grid>
</Window>
