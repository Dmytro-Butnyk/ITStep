<Window x:Class="BookShopApplication.ManagerWindow_1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookShopApplication"
        mc:Ignorable="d"
        Title="ManagerWindow_1" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Content="Authors"
               FontSize="20"
               FontWeight="Bold"
               Grid.Column="1"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Center"/>
        <Label Content="Genres"
               FontSize="20"
               FontWeight="Bold"
               Grid.Column="2"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Center"/>
        <Label Content="Publishers"
               FontSize="20"
               FontWeight="Bold"
               Grid.Column="3"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Center"/>
        
        <!--Authors Grid-->
        <Grid Grid.Row="1"
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Label Content="First name:"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Grid.Row="0"/>
            <Label Content="Last name:"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Grid.Row="1"/>

            <TextBox x:Name="AuFName_E"
                     Grid.Row="0"
                     Grid.Column="1"
                     VerticalAlignment="Center"/>
            <TextBox x:Name="AuLName_E"
                     Grid.Row="1"
                     Grid.Column="1"
                     VerticalAlignment="Center"/>
            <ScrollViewer Grid.Row="2"
                          Grid.ColumnSpan="2">
                <ListBox x:Name="AuListBox"/>
            </ScrollViewer>

            <Button Click="AuAdd_Click"
                    Content="Add"
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Padding="10,5"
                    Margin="10,0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"/>
            <Button Click="AuDelete_Click"
                    Content="Delete"
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Padding="10,5"
                    Margin="10,0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"/>
        </Grid>

        <!--Genres-->
        <Grid Grid.Row="1"
              Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Genre name:"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Grid.RowSpan="2"/>
            

            <TextBox x:Name="GeFName_E"
                     Grid.RowSpan="2"
                     Grid.Column="1"
                     Margin="20,0"
                     VerticalAlignment="Center"/>
            
            <ScrollViewer Grid.Row="2"
                  Grid.ColumnSpan="2">
                <ListBox x:Name="GeListBox"/>
            </ScrollViewer>

            <Button Click="GeAdd_Click"
                    Content="Add"
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Padding="10,5"
                    Margin="10,0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"/>
            <Button Click="GeDelete_Click"
                    Content="Delete"
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Padding="10,5"
                    Margin="10,0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"/>
        </Grid>
        
        <!--Publisher-->
        <Grid Grid.Row="1"
      Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Publisher name:"
           HorizontalAlignment="Right"
           VerticalAlignment="Center"
           Grid.RowSpan="2"/>


            <TextBox x:Name="PuFName_E"
             Grid.RowSpan="2"
             Grid.Column="1"
             Margin="20,0"
             VerticalAlignment="Center"/>

            <ScrollViewer Grid.Row="2"
          Grid.ColumnSpan="2">
                <ListBox x:Name="PuListBox"/>
            </ScrollViewer>

            <Button Click="PuAdd_Click"
            Content="Add"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Padding="10,5"
            Margin="10,0"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"/>
            <Button Click="PuDelete_Click"
            Content="Delete"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Padding="10,5"
            Margin="10,0"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</Window>
